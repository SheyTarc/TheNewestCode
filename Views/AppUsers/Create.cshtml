@model LETSGO.Models.AppUser

@{
    ViewData["Title"] = "Create";
}

<h1>Registration</h1>

<h4>Please fill in your information</h4>
<hr />
<style>
    body {
        background-color: #f8f9fa;
    }

    .form-container {
        background-color: lightgray; 
        border: 1px solid grey; 
        padding: 20px; 
        margin-top: 20px; 
        border-radius: 5px; 
    }

    .form-button {
        text-align: center;
        color: mediumpurple;
        margin-top: 20px;
    }

    .btn-primary.clicked {
        background-color: #28a745;
        border-color: #218838;
    }

    .required-field::before {
        content: '* ';
        color: red;
    }

    .hint {
        font-size: 12px;
        color: #6c757d;
    }

</style>

<div class="container">
    <form id="registrationFormPersonal" asp-action="Create" asp-controller="AppUsers" method="post" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-12 form-container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label required-field">First Name:</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label required-field">Last Name:</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>  
                </div>
                <div class="form-group">
                    <label asp-for="IdentityCardNum" class="control-label required-field">Identity Card Number:</label>
                    <input asp-for="IdentityCardNum" class="form-control" placeholder="xxxx-xx-xxxx" required type="number" />
                    <span asp-validation-for="IdentityCardNum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label required-field"></label>
                    <input asp-for="BirthDate" class="form-control" required type="date"/>
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

        </div>
    </div>
    <div class="row">
        <div class="col-12 form-container">
                   <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label required-field"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="xxx-xxxxxxx" required type="number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label required-field"></label>
                    <input asp-for="Address" class="form-control" placeholder="No x,Jalan xxx,Taman xxx" required />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label required-field"></label>
                    <input asp-for="City" class="form-control" placeholder="example:Kuala Lumpur" required />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PosCode" class="control-label required-field"></label>
                    <input asp-for="PosCode" class="form-control" placeholder="xxxxx" required type="number"/>
                    <span asp-validation-for="PosCode" class="text-danger"></span>
                </div>
        </div>
    </div>
     <div class="row">
        <div class="col-12 form-container">
            <h5>Log In Method (Important)</h5>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <label asp-for="Email" class="control-label required-field"></label>
                        <input asp-for="Email" class="form-control" required type="email" placeholder="youremail@example.com"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-sm-10">
                        <label asp-for="Password" class="control-label required-field">Password</label>
                        <input asp-for="Password" class="form-control" required type="password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 form-button text-right">
            <button type="submit" id="registerButton" class="btn btn-primary mb-2" onclick="submitFormAndRedirect()">Register</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-left">
            <a href="/Home/Index">Back to List</a>
        </div>
    </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function submitFormAndRedirect() {

            document.getElementById('registrationFormPersonal').submit();

            window.location.href = 'https://localhost:7143/AppUsers/Invest';
        }
    </script>
}
